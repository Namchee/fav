// tsconfig.json
{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    // this enables stricter inference for data properties on `this`
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vite-svg-loader",
      "vite/client"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "./src/vue-shims.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
