{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "DOM"
    ],
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "types": [
      "@types/node"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue",
    "src/shims.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
